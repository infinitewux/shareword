{
  "name": "cloudwords",
  "version": "1.0.0",
  "description": "云端高亮总览",
  "main": "index.html",
  "scripts": {
    "build-css": "tailwindcss -i src/css/input.css -o css/output.css",
    "watch-css": "tailwindcss -i src/css/input.css -o css/output.css --watch",
    "dev": "concurrently \"npm run watch-css\" \"http-server .\"",
    "start": "npm run build-css && http-server ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1"
  }
}